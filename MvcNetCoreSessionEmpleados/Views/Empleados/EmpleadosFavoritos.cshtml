@{
    List<Empleado> favoritos = MemoryCache.Get<List<Empleado>>("FAVORITOS");
}



<h1>
    Empleados Favoritísimos ⭐⭐⭐⭐⭐
</h1>

<h2 style="color: red">
    @ViewBag.Mensaje    
</h2>

@if (favoritos != null)
{
    <table class="table table-active table-hover">
        <thead>
            <tr class="">
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
                <th>
                    Departamento
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado empleado in favoritos)
            {
                <tr>
                    <td>
                        @empleado.Apellido
                    </td>
                    <td>
                        @empleado.Oficio
                    </td>
                    <td>
                        @empleado.Salario
                    </td>
                    <td>
                        @empleado.IdDepartamento
                    </td>
                    <td>
                        <a asp-controller="Empleados"
                        asp-action="EmpleadosFavoritos"
                        asp-route-idEliminar="@empleado.IdEmpleado" 
                        class="btn btn-danger">
                            Borrar Favorito
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
